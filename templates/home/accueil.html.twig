{% extends 'base.html.twig' %}

{% block title %}Déconnexion - JobStep{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(to right, #f5f7fa, #c3cfe2);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .logout-container {
            background-color: white;
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            margin: 5rem auto;
            text-align: center;
        }

        .logout-container h1 {
            color: #1e88e5;
            margin-bottom: 1rem;
        }

        .logout-container p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        .btn-group a {
            margin: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="logout-container">
        <h1>Bienvenue sur JobStep</h1>
        <p>Vous êtes bien déconnecté.</p>

        <div class="btn-group">
            <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Se reconnecter</a>
            <a href="{{ path('app_register') }}" class="btn btn-outline-success">Créer un compte</a>
        </div>
    </div>
{% endblock %}
