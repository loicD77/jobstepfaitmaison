{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur JobStep{% endblock %}

{% block body %}
    <div class="container mt-5 text-center">
        <div class="p-4 bg-light rounded shadow">
            <h1 class="mb-4">Bienvenue sur JobStep</h1>
            <p class="lead">Votre plateforme d’accompagnement à la reconversion professionnelle.</p>

            {% if app.user %}
                <p>Connecté en tant que <strong>{{ app.user.name }}</strong></p>

                <div class="d-grid gap-2 col-6 mx-auto mt-4">
                    <a href="{{ path('app_message_new') }}" class="btn btn-outline-primary btn-lg">Créer un message</a>
                    <a href="{{ path('app_ressource') }}" class="btn btn-outline-success btn-lg">Créer une ressource</a>
                    <a href="{{ path('parcours_etapes') }}" class="btn btn-outline-info btn-lg">Voir les étapes du parcours</a>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger mt-3">Déconnexion</a>
                </div>

            {% else %}
                <div class="btn-group mt-4" role="group">
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
                    <a href="{{ path('app_register') }}" class="btn btn-success">Créer un compte</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
