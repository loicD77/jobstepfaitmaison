{% extends 'base.html.twig' %}

{% block title %}Modifier la ressource{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Modifier la ressource</h1>

    {{ form_start(form) }}
        {{ form_row(form.intitule) }}
        {{ form_row(form.presentation) }}
        {{ form_row(form.support) }}
        {{ form_row(form.nature) }}
        {{ form_row(form.url) }}
        <button class="btn btn-primary">Mettre à jour</button>
    {{ form_end(form) }}

    <a href="{{ path('app_ressource_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

{% endblock %}
